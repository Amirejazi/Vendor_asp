@model Vendor.DataLayer.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود";
}

@section Scripts
{
    <partial name="_JqueryValidators" />
    <partial name="_CaptchaScripts" />
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>ورود</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>ورود</h2>
                    <form asp-controller="Acount" asp-action="Login">
                        <partial name="_CaptchaInput"/>
                        <p>
                            <label>تلفن همراه <span>*</span></label>
                            <input asp-for="Mobile" type="text">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </p>
                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input asp-for="Password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <a asp-controller="Acount" asp-action="ForgotPassword">کلمه عبور خود را فراموش کردم</a>
                        </p>
                        <div class="login_submit">
                            <button type="submit">ورود</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>

