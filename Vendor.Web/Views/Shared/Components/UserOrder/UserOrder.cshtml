@using Vendor.Application.Utils
@model Vendor.DataLayer.DTOs.Order.UserOpenOrderDTO


<div class="middel_right_info">
    <div class="header_wishlist">
        <a href="wishlist.html"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
        <span class="wishlist_quantity">3</span>
    </div>
    <div class="mini_cart_wrapper">
        <a href="javascript:void(0)"><i class="fa fa-shopping-bag" aria-hidden="true"></i> <i class="fa fa-angle-down"></i></a>
        <span class="cart_quantity">@Model.OrderDetails.Count</span>
        <!--mini cart-->
        <div class="mini_cart">
            @if (Model.OrderDetails != null && Model.OrderDetails.Any())
            {
                <div class="cart_items_container">
                    @foreach (var item in Model.OrderDetails)
                    {
                        <div class="cart_item">
                            <div class="cart_img">
                                <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-title="@item.ProductTitle.FixTextForUrl()">
                                    <img src="@(PathExtentions.ProductThumbnailImage + item.ProductImageName)" alt="">
                                </a>
                            </div>
                            <div class="cart_info">
                                <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-title="@item.ProductTitle.FixTextForUrl()">
                                    @item.ProductTitle (@item.ColorName)
                                </a>
                                <p>تعداد: @item.Count × <span> @((item.ProductPrice + item.ProductColorPrice).ToString("#,0")) تومان </span></p>
                            </div>
                            <div class="cart_remove">
                                <a href="#"><i class="ion-android-close"></i></a>
                            </div>
                        </div>
                    }
                </div>
            }
            
            <div class="mini_cart_table">
                <div class="cart_total mt-10">
                    <span>جمع کل:</span>
                    <span class="price">@Model.GetTotalPrice().ToString("#,0") تومان </span>
                </div>
            </div>

            <div class="mini_cart_footer">
                <div class="cart_button">
                    <a href="cart.html">مشاهده سبد</a>
                </div>
                <div class="cart_button">
                    <a href="checkout.html">پرداخت</a>
                </div>

            </div>

        </div>
        <!--mini cart end-->
    </div>
</div>