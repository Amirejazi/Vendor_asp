@using Vendor.Application.Utils
@model Vendor.DataLayer.DTOs.Product.CreateOrEditProductGalleryDTO
@{
    ViewData["Title"] = "ویرایش گالری محصول";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    @await Component.InvokeAsync("SellerSidebar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="account-details">
                            <h3>جزئیات حساب </h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form id="create_product_form" asp-action="EditProductGallery" asp-area="Seller" asp-controller="Product" method="post" enctype="multipart/form-data">
                                            <input type="hidden" asp-for="ImageName"/>
                                            <label>اولویت نمایش</label>
                                            <input type="text" asp-for="DispalyPriority">
                                            <span class="text-danger" asp-validation-for="DispalyPriority"></span>
                                            <br />
                                            <label>تصویر</label>
                                            <input type="file" asp-for="Image">
                                            <span class="text-danger" asp-validation-for="Image"></span>
                                            <img src="@(PathExtentions.ProductGalleryThumbnailImage + Model.ImageName)" width="100"/>
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit" >ویرایش</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>